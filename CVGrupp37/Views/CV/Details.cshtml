@using Services
@model Shared.ViewModelsCVSite

@{
    ViewBag.Title = "Details";
}

<h2></h2>

<div>
    <h4>CV</h4>

    @if (string.IsNullOrEmpty(User.Identity.Name))
    {
        <button class="messageTo btn btn-primary" data-id="@Model.CvModel.Id" data-user="">Meddelande 📮</button>
    }
    else
